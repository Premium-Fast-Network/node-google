{
  "version": "0.0.0",
  "npmClient": "npm",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com",
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish %s [skip ci]"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
